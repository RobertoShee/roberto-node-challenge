{
  "name": "todo-api",
  "version": "1.0.0",
  "description": "API de Gesti√≥n de Tareas con Node.js + Express + TypeORM + WebSockets",
  "type": "module",
  "main": "dist/src/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/server.js",
    "typeorm:run": "tsx ./node_modules/typeorm/cli.js migration:run -d src/config/data-source.ts",
    "typeorm:revert": "tsx ./node_modules/typeorm/cli.js migration:revert -d src/config/data-source.ts",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=unit",
    "test:integration": "jest --testPathPatterns=integration",
    "test:e2e": "jest --testPathPatterns=e2e",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov --coverageReporters=html",
    "test:watch": "jest --watch",
    "test:dates": "tsx src/test-dates.ts",
    "test:shutdown": "tsx src/test-graceful-shutdown.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix"
  },
  "keywords": [
    "api",
    "todo",
    "express",
    "typeorm",
    "websockets"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-status-codes": "^2.3.0",
    "lodash": "^4.17.21",
    "lodash-decorators": "^6.0.1",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.7.5",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^30.1.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.1.4",
    "typescript": "^5.9.2"
  }
}
